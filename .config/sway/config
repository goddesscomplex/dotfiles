bar {
    swaybar_command waybar
}

#
# Eye Candy:
#

# Load last pywal color scheme
exec wal -R

blur enable
#blur_xray enable
corner_radius 5
shadows enable

layer_effects "waybar" blur enable; shadows enable; corner_radius 5;
layer_effects "gtk-layer-shell" blur enable; shadows enable;
layer_effects "rofi" blur enable; shadows enable; corner_radius 5;
layer_effects "nvim" blur enable; shadows enable; corner_radius 5;


#
# Startup Scripts:
#

# Start network manager applet
exec nm-applet --indicator

include /etc/sway/config.d/*
